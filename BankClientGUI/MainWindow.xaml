<Window x:Class="BankClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bank Client GUI" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Index -->
            <RowDefinition Height="Auto"/>
            <!-- Account Info -->
            <RowDefinition Height="Auto"/>
            <!-- Total Accounts -->
            <RowDefinition Height="*"/>
            <!-- Accounts List -->
        </Grid.RowDefinitions>

        <!-- Search by Name + Account -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,10" >
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="First Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="FNameSearch" Width="100" Margin="0,0,10,0" Padding="4"/>
                <TextBlock Text="Last Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="LNameSearch" Width="100" Margin="0,0,10,0" Padding="4"/>
                <TextBlock Text="Account:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="AcctSearch" Width="80" Margin="0,0,10,0" Padding="4"/>
                <Button Content="Search" Click="SearchButton_Click" Width="90" Height="30" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                        BorderThickness="0" Cursor="Hand" Margin="5,0,0,0"
                        HorizontalAlignment="Left" VerticalAlignment="Center"
                        >
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Index Search -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Search by Index:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="IndexNum" Width="80" Margin="0,0,5,0" Padding="4"/>
                <Button Content="Go" Width="70" Height="30" Click="GoButton_Click"
                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Account Info -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="300" Margin="0,0,20,0">
                    <TextBlock Text="First Name:" FontWeight="Bold"/>
                    <TextBox x:Name="FNameBox" IsReadOnly="True" Padding="4" Margin="0,2,0,5"/>
                    <TextBlock Text="Last Name:" FontWeight="Bold"/>
                    <TextBox x:Name="LNameBox" IsReadOnly="True" Padding="4" Margin="0,2,0,5"/>
                    <TextBlock Text="Account No:" FontWeight="Bold"/>
                    <TextBox x:Name="AcctNoBox" IsReadOnly="True" Padding="4" Margin="0,2,0,5"/>
                    <TextBlock Text="Balance:" FontWeight="Bold"/>
                    <TextBox x:Name="BalanceBox" IsReadOnly="True" Padding="4" Margin="0,2,0,5"/>
                    <TextBlock Text="PIN:" FontWeight="Bold"/>
                    <TextBox x:Name="PinBox" IsReadOnly="True" Padding="4" Margin="0,2,0,5"/>
                </StackPanel>

                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Width="180" Height="180">
                    <Image x:Name="ProfileImage" Stretch="UniformToFill"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Total Count -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="GetCountButton" Content="Show Total Accounts" Width="200" Height="35"
                    Click="GetCountButton_Click"
                    Background="#FF9800" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <TextBlock x:Name="TotalCountText" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Accounts List -->
        <ListView x:Name="AccountsListView" Grid.Row="4" Margin="0,10,0,0" Height="280" Background="White">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="Padding" Value="2"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FName}" Width="120"/>
                    <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LName}" Width="120"/>
                    <GridViewColumn Header="Account No" DisplayMemberBinding="{Binding AcctNo}" Width="100"/>
                    <GridViewColumn Header="Balance" DisplayMemberBinding="{Binding Balance}" Width="100"/>
                    <GridViewColumn Header="PIN" DisplayMemberBinding="{Binding Pin}" Width="60"/>
                    <GridViewColumn Header="Picture" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="50" Height="50" Stretch="UniformToFill" Source="{Binding ProfileImage}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
