<Window x:Class="BankClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bank Client GUI" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Index Search -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Index:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="IndexNum" Width="80" Margin="0,0,5,0"/>
            <Button Content="Go" Width="60" Click="GoButton_Click"/>
        </StackPanel>

        <!-- Account Info -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
            <StackPanel Width="300">
                <TextBlock Text="First Name:"/>
                <TextBox x:Name="FNameBox" IsReadOnly="True"/>
                <TextBlock Text="Last Name:"/>
                <TextBox x:Name="LNameBox" IsReadOnly="True"/>
                <TextBlock Text="Account No:"/>
                <TextBox x:Name="AcctNoBox" IsReadOnly="True"/>
                <TextBlock Text="Balance:"/>
                <TextBox x:Name="BalanceBox" IsReadOnly="True"/>
                <TextBlock Text="PIN:"/>
                <TextBox x:Name="PinBox" IsReadOnly="True"/>
            </StackPanel>

            <Image x:Name="ProfileImage" Width="180" Height="180" Margin="20,0,0,0"
                   Stretch="UniformToFill" />
        </StackPanel>

        <!-- Total Count -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <Button x:Name="GetCountButton" Content="Show Total Accounts" Width="200"
                    Click="GetCountButton_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="TotalCountText" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Accounts List -->
        <ListView x:Name="AccountsListView" Grid.Row="3" Margin="0,10,0,0" Height="250">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FName}" Width="150"/>
                    <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LName}" Width="150"/>
                    <GridViewColumn Header="Account No" DisplayMemberBinding="{Binding AcctNo}" Width="150"/>
                    <GridViewColumn Header="Balance" DisplayMemberBinding="{Binding Balance}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
