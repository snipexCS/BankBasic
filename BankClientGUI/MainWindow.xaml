<Window x:Class="BankClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bank Client" Height="450" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Index:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="IndexNum" Width="60" Text="1"/>
            <Button x:Name="GoButton" Content="Get By Index" Click="GoButton_Click" Margin="8,0,15,0"/>

            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="SearchBox" Width="150"/>
            <Button x:Name="SearchButton" Content="Search" Click="SearchButton_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <Separator Grid.Row="1"/>

        <!-- Details and Image -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Details -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Labels -->
                <TextBlock Text="First Name:" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                <TextBlock Text="Last Name:" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                <TextBlock Text="Balance:" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                <TextBlock Text="Account:" Grid.Row="3" Grid.Column="0" Margin="0,2"/>
                <TextBlock Text="PIN:" Grid.Row="4" Grid.Column="0" Margin="0,2"/>

                <!-- Textboxes -->
                <TextBox x:Name="FNameBox" Grid.Row="0" Grid.Column="1" Margin="0,2" IsReadOnly="True"/>
                <TextBox x:Name="LNameBox" Grid.Row="1" Grid.Column="1" Margin="0,2" IsReadOnly="True"/>
                <TextBox x:Name="BalanceBox" Grid.Row="2" Grid.Column="1" Margin="0,2" IsReadOnly="True"/>
                <TextBox x:Name="AcctNoBox" Grid.Row="3" Grid.Column="1" Margin="0,2" IsReadOnly="True"/>
                <TextBox x:Name="PinBox" Grid.Row="4" Grid.Column="1" Margin="0,2" IsReadOnly="True"/>
            </Grid>

            <!-- Right: Profile Image -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Image x:Name="ProfileImage" Stretch="UniformToFill"/>
            </Border>
        </Grid>
    </Grid>
</Window>
